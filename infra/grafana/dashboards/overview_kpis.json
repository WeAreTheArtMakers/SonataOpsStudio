{
  "id": null,
  "uid": "overview-kpis",
  "title": "SonataOps - KPI Overview",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5s",
  "time": { "from": "now-6h", "to": "now" },
  "panels": [
    {
      "type": "stat",
      "title": "KPI Ingest Total",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        { "expr": "sum(kpi_ingest_total)", "refId": "A" }
      ]
    },
    {
      "type": "stat",
      "title": "Anomalies Detected",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        { "expr": "sum(anomaly_detected_total)", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "HTTP Latency P95 (s)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        { "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "RAG Queries / min",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        { "expr": "sum(rate(rag_queries_total[1m]))", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Audio Renders / min",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        { "expr": "sum(rate(audio_render_total[1m]))", "refId": "A" }
      ]
    }
  ],
  "templating": { "list": [] },
  "annotations": { "list": [] }
}
